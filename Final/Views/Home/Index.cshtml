@model Final.Models.Home.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<section id="portfolio">

    <div class="gallery col-lg-6 col-md-12 col-sm-12 col-xs-12 mx-auto pt-5" data-aos="zoom-in" data-oas-offset="200">
        <h1 class="gallery-title">Result for your Search</h1>

    </div>


    <div class="container-fluid max-width:100%">
        <div class="row w-auto" data-aos="zoom-out" data-oas-offset="200">
            <div class="col-lg-3 col-md-3  col-sm-12 pt-3">
                <button class="btn btn-dark filter-button"
                        data-filter="cloths" style="width:100%">
                    Cloths
                </button>
            </div>
            <div class="col-lg-3 col-md-3  col-sm-12 pt-3">
                <button class="btn btn-dark filter-button" data-filter="shoes"
                        style="width:100%">
                    Shoes
                </button>
            </div>
            <div class="col-lg-3 col-md-3  col-sm-12 pt-3">
                <button class="btn btn-dark filter-button"
                        data-filter="electric" style="width:100%">
                    Electronics
                </button>
            </div>
            <div class="col-lg-3 col-md-3  col-sm-12 pt-3">
                <button class="btn btn-dark filter-button" data-filter="other"
                        style="width:100%">
                    Accessories
                </button>
            </div>
        </div>
        <div class="row pt-4 ml-0">
            @foreach (var item in Model.ListOfProducts)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 text-center filter cloths">
                    <div class="card border-0 bg-light mb-2">
                        <div class="card-body">
                            <img src="~/ProductImg/@item.ProductImage" class="img-thumb" alt="">
                            <div class="card-title pt-3">
                                <h4> @item.ProductName</h4>
                                <p> @item.Price </p>
                                <p> 
                                    @if (item.Quantity > 0)
                                     {
                                        <p> Available</p>
                                     }
                                     else
                                     {
                                        <p> Unavailable </p>
                                     }
                                </p>  
                            <div class="product-item-badge">
                                <p>
                                    @if (item.IsFeatured ==true)
                                    {
                                    <p> New </p>
                                     }
                                     else
                                     {
                                    <p> Old </p>
                                     }
                                    </p>
                                </div>

                                
                                <a href="#" class="btn btn-primary w-100" style="text-align: center;">Go to Product </a>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
</section>

